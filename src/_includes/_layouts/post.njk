---
layout: _layouts/base.njk
---
<h1>{{ title }}</h1>
<p class="meta time">
  <time datetime="{{page.date.toISOString().split('T')[0]}}">{{ page.date | formatDate }}</time>
</p>
{# <p class="meta author">by {{metadata.author.name}}</p> #}
<p class="meta tags">
  {% for tag in tags %}
    {%- if tag != "posts" -%}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
    {%- endif -%}
  {% endfor %}
</p>
{{ content | safe }}

<p class="top">
  <a href="{{ '#top' | url }}">Top</a>
</p>